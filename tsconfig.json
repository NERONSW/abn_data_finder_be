{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext", // Essential for "type": "module"
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "emitDeclarationOnly": false, // Fix: Allows generation of server.js
    "allowImportingTsExtensions": false, // Fix: Must be false to emit JS
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
